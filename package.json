{
  "name": "angular-calculator",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:cucumber": "node run-cucumber-interactive.js",
    "test:cucumber:direct": "npx cucumber-js --config cucumber.config.js",
    "test:unit": "ng test --watch=false --browsers=ChromeHeadless",
    "test:all": "npm run test:unit && echo \"Now start Angular server with 'npm start' and run 'npm run test:cucumber:direct'\"",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "lint:check": "ng lint --max-warnings 0",
    "docker:build": "docker-compose build angular-calculator-prod",
    "docker:run": "docker-compose up angular-calculator-prod",
    "docker:run:detached": "docker-compose up -d angular-calculator-prod",
    "docker:dev": "docker-compose --profile dev up angular-calculator-dev",
    "docker:test": "docker-compose --profile test run --rm angular-calculator-test",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v --remove-orphans"
  },
  "overrides": {
    "chokidar":"$chokidar"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular/cli": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.11.0",
    "angular-eslint": "21.0.1",
    "chokidar": "^5.0.0",
    "eslint": "^9.39.1",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "puppeteer": "^24.37.3",
    "typescript": "~5.4.0",
    "typescript-eslint": "8.46.4"
  },
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=8.0.0"
  }
}
